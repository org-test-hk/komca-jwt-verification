<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.komca.foundation.jwt.mapper.query.RoleQueryMapper">
	<!-- Role ResultMap -->
	<resultMap id="roleResultMap" type="kr.or.komca.foundation.jwt.domain.entity.Role">
		<id property="roleNo" column="ROLE_NO"/>
		<result property="roleName" column="ROLE_NAME"/>
		<result property="description" column="DESCRIPTION"/>
		<result property="regDate" column="REG_DATE"/>
		<result property="modDate" column="MOD_DATE"/>
		<result property="delYn" column="DEL_YN"/>
	</resultMap>

	<!-- 모든 역할 조회 -->
	<select id="findAllRoles" resultMap="roleResultMap">
		SELECT
			role_no,
			role_name,
			description,
			reg_date,
			mod_date,
			del_yn
		FROM t_role
		WHERE del_yn = 'N'
		ORDER BY role_no
	</select>
</mapper>